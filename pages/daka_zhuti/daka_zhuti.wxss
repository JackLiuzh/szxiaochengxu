/* pages/daka_zhuti/daka_zhuti.wxss */
.con-box{
  display: flex;
  flex-direction: column;
  
}
.con-box .box-item{
  display: flex;
  flex-direction: row;
  height:142rpx;
  padding: 30rpx;
  background-color: #fff;
  border-top:1rpx solid #eee;
}
.con-box .box-item .item-image{
  width:208rpx;
  height:142rpx;
}
.con-box .box-words{
  width:65%;
  display: flex;
  flex-direction: column;
  
  /* flex: 1; */
  margin-left:30rpx;
  height: 100%;
  justify-content: space-start;
}
.con-box .box-words .words-title {
  font-size: 32rpx;
  font-weight: bold;
  color:#333;
  line-height:40rpx;
}
.con-box .box-words .words-text{
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  margin-top:12rpx;
}
.con-box .box-words .words-text .text-guan {
  width:98rpx;
  height:44rpx;
  border:1rpx solid #EA5959;
  text-align: center;
  line-height: 44rpx;
  color:#EA5959;
  border-radius: 5rpx;
}
.con-box .box-words .words-text .text-suo{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-left:27rpx;
  align-items: center;
}
.con-box .box-words .words-text .text-suo image{
   width:30rpx;
   height:30rpx;
   margin-right:9rpx;
}
.con-box .box-words .words-text .text-suo text {
  font-size: 24rpx;
  color:#999;
}